<UserControl x:Class="WpfDemo.UI.User.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDemo.UI.User"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <DataGrid AutoGenerateColumns="True" ItemsSource="{Binding UserItems}">
            
        </DataGrid>
        <!--<TextBox x:Name="tbxName"></TextBox>-->
        <Button Height="30" Width="120" Content="Add" Command="{Binding AddCmd}"></Button>
    </StackPanel>
</UserControl>
